<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/topo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:background="@color/huntVisionAzul"
        android:clickable="true">

        <Button
            android:id="@+id/btnVoltar"
            android:layout_width="@dimen/top_bar_font_height"
            android:layout_height="@dimen/top_bar_font_height"
            android:layout_centerVertical="true"
            android:onClick="backPressed"
            android:layout_marginLeft="10dp"
            android:background="@drawable/botao_seta_voltar" />

        <ImageView
            android:onClick="backPressed"
            android:id="@+id/imgCliente"
            android:layout_width="@dimen/top_bar_font_height"
            android:layout_height="@dimen/top_bar_font_height"
            android:adjustViewBounds="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/btnVoltar"
            android:background="@drawable/icone_home_agenda" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/imgCliente"
            android:text="Agendamento"
            android:textColor="#FFF"
            android:textSize="@dimen/top_bar_font_height" />

        <Button
            android:id="@+id/excluir"
            android:layout_width="@dimen/top_bar_font_height"
            android:layout_height="@dimen/top_bar_font_height"
            android:layout_centerVertical="true"
            android:onClick="backPressed"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@android:drawable/ic_menu_delete" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rlBk"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/topo"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="true"

            android:layout_alignParentStart="false"
            android:gravity="right">


            <TextView
                android:id="@+id/lblUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_toLeftOf="@+id/txtUsuario"
                android:gravity="right"
                android:text="Usuario:"
                android:textColor="#FFF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="Ricardo"
                android:textColor="#FFF"
                android:textStyle="bold" />
        </RelativeLayout>

    <TextView
        android:id="@+id/activity_agenda_detalhe_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/rlBk"
        android:gravity="top"
        android:padding="15dp"
        android:layout_marginTop="15dp"
        android:text="Agendado "
        android:textSize="18sp" />


    <TextView
        android:id="@+id/activity_agenda_detalhe_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/activity_agenda_detalhe_data"
        android:gravity="top"
        android:padding="15dp"
        android:text="Senai Av Orlando Gomes"
        android:textSize="16sp"
        android:textStyle="italic|bold" />


        <TextView
            android:id="@+id/activity_agenda_detalhe_descricao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/activity_agenda_detalhe_local"
            android:gravity="top"
            android:padding="15dp"
            android:text="Senai Av Orlando Gomes"
            android:textSize="16sp"
            android:textStyle="italic|bold" />


        <LinearLayout
        android:id="@+id/llRegistrarChegada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/activity_agenda_detalhe_descricao"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="true"
        android:layout_margin="40dp">
    <Button

        android:layout_width="180dp"
        android:layout_height="40dp"
        android:text="Registrar Chegada"

        android:id="@+id/btnRegistrarChegada"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:background="@color/huntVisionLaranja"

         android:clickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtChegada"
            android:text="30/06/2015"
            android:layout_margin="1dp"
            android:paddingLeft="20dp" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/llRegistrarChegada"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="true"
        android:layout_margin="40dp"
        android:weightSum="1">
        <Button
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:text="Registrar SaÃ­da"
            android:id="@+id/btnRegistrarSaida"
            android:textSize="18dp"
            android:background="@color/huntVisionLaranja"

            android:textColor="#FFF"
            android:layout_weight="0.33"
            android:clickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30/06/2015"
            android:id="@+id/txtSaida"

            android:layout_margin="1dp"
            android:paddingLeft="20dp" />
    </LinearLayout>

</RelativeLayout>
</RelativeLayout>