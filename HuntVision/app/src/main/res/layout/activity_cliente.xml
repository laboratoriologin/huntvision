<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="login.com.huntvision.ClienteActivity">

    <RelativeLayout
        android:id="@+id/topo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:background="@color/huntVisionAzul">

        <Button
            android:id="@+id/btnVoltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp" android:onClick="backPressed"
            android:background="@drawable/botao_seta_voltar" />

        <ImageView
            android:id="@+id/imgCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/btnVoltar"
            android:onClick="backPressed"
            android:clickable="true"
            android:background="@drawable/icone_cliente" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/imgCliente"
            android:text="Cliente"
            android:textColor="#FFF"
            android:textSize="18dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlBk"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_centerInParent="true"
        android:background="@color/huntVisionCinza">

        <RelativeLayout
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right"

            >


            <TextView
                android:id="@+id/lblUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="false"
                android:gravity="right"
                android:text="Usuario:"
                android:textColor="#FFF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="false"

                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/lblUsuario"
                android:gravity="left"
                android:text="Ricardo"
                android:textColor="#FFF"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlConteudo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/rlBk"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="20sp"
            android:background="#FFF"
            android:padding="20sp">

            <TextView
                android:id="@+id/txtTituloCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:gravity="left"
                android:text="Informações"
                android:textColor="@color/huntVisionCinza"
                android:textSize="22dp"

                />

            <TextView
                android:id="@+id/lblCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtTituloCliente"
                android:text="Cliente:"
                android:textColor="@color/huntVisionAzul"
                android:textSize="18dp" />

            <RelativeLayout
                android:id="@+id/rlSpCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblCliente"
                android:layout_marginTop="5dp"
                android:background="@color/huntVisionLaranja"
                android:minHeight="0dp">

                <Spinner
                    android:id="@+id/spnCliente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="#FFF"
                    android:clickable="true"
                    android:fadingEdge="vertical"
                    android:spinnerMode="dropdown"
                    android:splitMotionEvents="true"
                    android:theme="@style/MySpinnerStyle">

                </Spinner>

                <ImageView
                    android:id="@+id/imgAba"
                    android:layout_width="16dp"
                    android:layout_height="16dp"

                    android:layout_alignBottom="@+id/spnCliente"
                    android:layout_alignParentBottom="false"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="false"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="1dp"
                    android:src="@drawable/aba" />
            </RelativeLayout>

            <TextView
                android:id="@+id/lblLocal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlSpCliente"
                android:text="Local:"
                android:textColor="@color/huntVisionAzul"
                android:textSize="18dp"
                android:visibility="invisible"

                />

            <RelativeLayout
                android:id="@+id/rlSpLocal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblLocal"
                android:layout_marginTop="5dp"
                android:background="@color/huntVisionLaranja"
                android:minHeight="0dp">

                <Spinner
                    android:id="@+id/spnLocal"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="#FFF"
                    android:clickable="true"
                    android:fadingEdge="vertical"
                    android:spinnerMode="dropdown"
                    android:splitMotionEvents="true"
                    android:theme="@style/MySpinnerStyle"
                    android:visibility="invisible">

                </Spinner>

                <ImageView
                    android:id="@+id/imgAbaLocal"
                    android:layout_width="16dp"
                    android:layout_height="16dp"

                    android:layout_alignBottom="@+id/spnLocal"
                    android:layout_alignParentBottom="false"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="false"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="1dp"
                    android:src="@drawable/aba" />
            </RelativeLayout>

            <TextView
                android:id="@+id/lblSecao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlSpLocal"
                android:text="Seção:"
                android:textColor="@color/huntVisionAzul"
                android:textSize="18dp"
                android:visibility="invisible" />


            <RelativeLayout
                android:id="@+id/rlSpSecao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblSecao"
                android:layout_marginTop="5dp"
                android:background="@color/huntVisionLaranja"
                android:minHeight="0dp">

                <Spinner
                    android:id="@+id/spnSecao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblSecao"
                    android:layout_margin="2dp"
                    android:background="#FFF"
                    android:clickable="true"
                    android:fadingEdge="vertical"
                    android:spinnerMode="dropdown"
                    android:splitMotionEvents="true"
                    android:theme="@style/MySpinnerStyle"
                    android:visibility="invisible">

                </Spinner>

                <ImageView
                    android:id="@+id/imgAbaSessao"
                    android:layout_width="16dp"
                    android:layout_height="16dp"

                    android:layout_alignBottom="@+id/spnSecao"
                    android:layout_alignParentBottom="false"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="false"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="1dp"
                    android:src="@drawable/aba" />
            </RelativeLayout>


        </RelativeLayout>

        <Button

            android:id="@+id/btnQuestionario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/rlConteudo"
            android:layout_alignParentBottom="false"
            android:layout_centerVertical="true"
            android:layout_margin="25dp"
            android:background="@color/huntVisionAzul"
            android:clickable="true"
            android:drawableRight="@drawable/icone_acessar_questionario"
            android:nestedScrollingEnabled="false"
            android:onClick="gerarQuestionario"
            android:padding="10dp"
            android:text="Acessar Questionário"
            android:textColor="#FFF"
            android:textSize="22dp" />
    </RelativeLayout>


</LinearLayout>