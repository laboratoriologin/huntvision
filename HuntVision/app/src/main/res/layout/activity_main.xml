<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <include layout="@layout/topo" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/topo">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/img_huntvision_home"
            android:layout_height="@dimen/img_huntvision_home"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"

            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:background="@drawable/logo_hunt_vision_260px" />


        <RelativeLayout

            android:id="@+id/rlLerCodigo"
            style="@style/menuStyle"
            android:layout_below="@+id/imageView"
            android:clickable="true"
            android:onClick="goQRcode">

            <RelativeLayout
                android:id="@+id/rlTraco"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/menu_divider"
                android:duplicateParentState="true" />

            <TextView
                android:id="@+id/txtLerCodigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="false"
                android:layout_alignParentTop="false"
                android:layout_alignWithParentIfMissing="false"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/rlTraco"
                android:fontFamily=""
                android:text="Ler CÃ³digo"
                android:textColor="@android:color/white"
                android:textSize="24dp" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="1dp"
                android:src="@drawable/icone_home_ler_codigo" />

        </RelativeLayout>

        <RelativeLayout

            android:id="@+id/rlCliente"
            style="@style/menuStyle"
            android:layout_below="@+id/rlLerCodigo"
            android:clickable="true"
            android:onClick="loadCliente">

            <RelativeLayout
                android:id="@+id/rlTraco2"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/menu_divider" />

            <TextView
                android:id="@+id/txtCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="false"
                android:layout_alignParentTop="false"
                android:layout_alignWithParentIfMissing="false"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/rlTraco2"
                android:text="Cliente"
                android:textColor="@android:color/white"
                android:textSize="24dp" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="1dp"
                android:src="@drawable/icone_home_cliente" />

        </RelativeLayout>

        <RelativeLayout

            android:id="@+id/rlConcluirVisita"
            style="@style/menuStyle"
            android:layout_below="@+id/rlCliente"
            android:clickable="true"
            android:onClick="goPendentes">

            <RelativeLayout
                android:id="@+id/rlTraco3"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/menu_divider" />

            <TextView
                android:id="@+id/txtVisita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="false"
                android:layout_alignParentTop="false"
                android:layout_alignWithParentIfMissing="false"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/rlTraco3"
                android:text="Concluir Visita"
                android:textColor="@android:color/white"
                android:textSize="24dp" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="1dp"
                android:src="@drawable/icone_home_concluir_visita" />

        </RelativeLayout>

        <RelativeLayout

            android:id="@+id/rlAgenda"
            style="@style/menuStyle"
            android:layout_below="@+id/rlConcluirVisita"
            android:clickable="true"
            android:onClick="goAgenda">

            <RelativeLayout
                android:id="@+id/rlTraco4"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/menu_divider" />

            <TextView
                android:id="@+id/txtSobre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="false"
                android:layout_alignParentTop="false"
                android:layout_alignWithParentIfMissing="false"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/rlTraco4"
                android:text="Agenda"
                android:textColor="@android:color/white"
                android:textSize="24dp" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="1dp"
                android:src="@drawable/icone_home_agenda" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rlAgenda"
            android:clickable="true"

            android:onClick="goSincronizacao"
            android:textAlignment="center">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="false"
                android:layout_alignWithParentIfMissing="false"
                android:layout_centerHorizontal="true"
                android:src="@drawable/bt_configuracoes" />
        </RelativeLayout>


    </RelativeLayout>

    <include layout="@layout/rodape" />

</RelativeLayout>
