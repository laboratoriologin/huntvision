<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="login.com.huntvision.SobreActivity">

    <RelativeLayout
        android:id="@+id/topo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:background="@color/huntVisionAzul">

        <Button
            android:id="@+id/btnVoltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"

            android:layout_marginLeft="10dp" android:onClick="backPressed"
            android:background="@drawable/botao_seta_voltar" />

        <ImageView
            android:id="@+id/imgSobre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/btnVoltar"
            android:clickable="true"
            android:onClick="backPressed"
            android:background="@drawable/icone_sobre" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/imgSobre"
            android:text="Sobre"
            android:textColor="#FFF"
            android:textSize="18dp" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:gravity="left"
        android:layout_margin="15dp"
        android:textStyle="bold"
        android:id="@+id/txtTituloSobre"
        android:textColor="@color/huntVisionCinza"
        android:text="HuntVision"

        android:layout_below="@+id/topo"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:gravity="left"
        android:layout_margin="15dp"
        android:textStyle="bold"
        android:id="@+id/txtConteudoSobre"
        android:textColor="@color/huntVisionCinza"
        android:text="HuntVision"

        android:layout_below="@+id/txtTituloSobre"

        />


</RelativeLayout>
