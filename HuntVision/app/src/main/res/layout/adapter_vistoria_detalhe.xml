<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/adapter_vistoria_detalhe_pergunta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:gravity="top"
        android:padding="5dp"
        android:text="Lorem ipsum bla bla bla"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/adapter_vistoria_detalhe_resposta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/adapter_vistoria_detalhe_pergunta"
        android:gravity="top"
        android:padding="5dp"
        android:text="Feita em 13/04/2015"
        android:textSize="16sp"
        android:textStyle="italic|bold" />

    <TextView
        android:id="@+id/lbImagens"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/adapter_vistoria_detalhe_resposta"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal|right"
        android:padding="5dp"
        android:text="0 Fotos"
        android:textColor="@color/huntVisionAzul"
        android:textStyle="italic" />



</RelativeLayout>
