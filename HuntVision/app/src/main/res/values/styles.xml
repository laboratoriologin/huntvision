<resources>
   <style name="AppBaseTheme" parent="android:Theme.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme.Light.NoTitleBar">
        <item name="android:dropDownListViewStyle">@style/MySpinnerStyle</item>
    </style>

    <style name="MySpinnerStyle" parent="android:style/Widget.ListView.DropDown">
    <item name="android:divider">@color/huntVisionLaranja</item>
    <item name="android:dividerHeight">2dp</item>
    <item name="android:textSize">30sp</item>

</style>

    <style name="menuStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">59dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/menu</item>

    </style>
</resources>
