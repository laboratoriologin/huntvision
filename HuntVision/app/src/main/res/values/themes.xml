<resources>


    <style name="AppTheme" parent="@style/Theme.AppCompat.Light">
        <item name="actionBarTheme">@style/MyActionBarTheme</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="colorAccent">@color/huntVisionAzul</item>
        <item name="colorPrimary">@color/huntVisionAzul</item>
        <item name="colorPrimaryDark">@color/huntVisionAzulDark</item>
        <item name="actionMenuTextColor">@color/huntVisionAzul</item>
        <item name="drawerArrowStyle">@style/MyDrawerArrowToggle</item>
        <item name="android:dropDownListViewStyle">@style/MySpinnerStyle</item>
    </style>

    <style name="MyActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@color/huntVisionAzul</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
    </style>


    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MyDrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="android:color">@android:color/white</item>
    </style>

    <!--No ActionBar Theme -->
    <style name="NoActionBarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:dropDownListViewStyle">@style/MySpinnerStyle</item>
        <item name="colorAccent">@color/huntVisionAzul</item>
        <item name="colorPrimary">@color/huntVisionAzul</item>
        <item name="actionMenuTextColor">@color/huntVisionAzul</item>
    </style>


    <style name="MySpinnerStyle" parent="style/Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@color/huntVisionLaranja</item>
        <item name="android:dividerHeight">2dp</item>
        <item name="android:textSize">30sp</item>

    </style>

    <style name="menuStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">59dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/menu</item>

    </style>


</resources>
